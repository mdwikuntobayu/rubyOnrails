<h1>Page show article In view folder</h1>
Title : <%= @article.title %><br />
Body  : <%= @article.body %>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= comment.content %><br />
  <% end %>
</div><br /><br />


<% unless(current_user.nil?)%>
   <%= form_for @comment, :url => comments_path do |f| -%>
      <%= f.text_area :content %>
      <%= f.hidden_field :article_id, :value => @article.id %>
      <%= submit_tag "comment" %>
  <% end -%>
<% end %>
